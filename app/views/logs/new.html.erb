<h2>Registro de Variable</h2>

<div class="d-flex w-100 h-100 justify-content-center">
  <div class="w-50 h-50">
    <%= form_for(@log) do |f| %>
      <div class="form-row mb-4">
        <div class="form-group col-md-6">
          <h4>Variable a Registrar</h4>
          <%= f.select :patient_medical_id, @patient.variables_with_patient_medical, {}, {class: "form-control"} %>
        </div>
        <div class="form-group col-md-6">
          <h4>Valor a Registrar</h4>
          <%= f.text_field :value, class: "registration_input pl-2 h-5" %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.submit "Registrar", class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>