<div class="flex-column-container">
  <div class="medical-title">
  <p>Variables medicas de paciente</p>
  <h3><%="#{@patient.first_name} #{@patient.last_name}"%></h3>
  </div>
  <div class="medical-center-container">
  <div class="medical-container">
<% if @medicals.empty? %>
  <h3>AÃºn no tiene pacientes</h3>
<% else %>
  <table id="medical-var">
    <tr class="medical-table-title">
    <th>nombre</th>
    <th>frecuencia</th>
    <th></th>
    </tr>
  <% @medicals.each do |m| %>
  <tr>
    <td><%=" #{m.medical_variable.name}"%></td>
    <td><%="#{m.freq}"%></td>
    <td>
      <%= form_tag(medical_path, method: :patch, class: "medical-row", autocomplete: "off") do %>
      <%= hidden_field_tag :patient, @patient.id %>
      <%= hidden_field_tag :medical, m.id %>
        <div class="medical-update-form"><%= text_field_tag :freq, nil %></div>
        <div class="medical-update-form"><%= submit_tag "cambiar", class: "btn btn-small btn-success" %></div>
    <% end %>
    </td>
  </tr>
  <% end %>
  </table>
<% end %>
</div>
</div>
</div>
