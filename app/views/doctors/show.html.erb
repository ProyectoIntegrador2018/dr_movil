<div class="d-flex w-100 justify-content-center mb-4">
  <div class="d-flex w-50 justify-content-start">
    <h2>¡Bienvenido, Dr. <%= @doctor.first_name %>!</h2>
  </div>
</div>
<div class="d-flex w-100 justify-content-center">
  <div class="d-flex w-50 justify-content-center">
      <div class="row w-100">
        <div class="col-8">
          <div class="card">
            <h5 class="card-header text-light bg-info">Información de la Cuenta</h5>
            <div class="card-body">
              <h5 class="card-title"><%= "#{@doctor.sex == 'male' ? 'Dr.' : 'Dra.'} #{@doctor.first_name.titleize} #{@doctor.last_name.titleize}" %></h5>
              <p class="card-title"><%= @doctor.sex == 'male' ? 'Masculino' : 'Femenino' %></p>
              <p class="card-title"><%= @doctor.birth_date %></p>
              <p class="card-title"><%= @doctor.email %></p>
            </div>
            <div class="card-body">
              <p class="card-text"><%= "Cuenta creada el #{@doctor.created_at.to_date}" %></p>
              <%= link_to "Editar", edit_doctor_path(@doctor), class: 'btn btn-info' %>
            </div>
          </div>
        </div>
        <div class="col-4">
            <div class="card">
              <h5 class="card-header text-light bg-info">Resumen de Pacientes</h5>
              <div class="card-body">
                <h5 class="card-title">Propios</h5>
                <p class="card-title"><%= @doctor.patients.count %></p>
              </div>
              <div class="card-body">
                <h5 class="card-title">Externos</h5>
                <p class="card-title"><%= @doctor.viewable_patients.count %></p>
                <%= link_to "Ir a Pacientes", doctors_path, class: 'btn btn-info' %>
              </div>
              <div class="card-body">
                <h5 class="card-title">Compartidos</h5>
                <p class="card-title"><%= @doctor.shared_patients.count %></p>
                <%= link_to "Ir a Permisos", viewable_patients_path, class: 'btn btn-info' %>
              </div>
            </div>
        </div>
      </div>
  </div>
</div>