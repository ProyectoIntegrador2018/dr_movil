<div class="flex-container">
    <div class="flex-column-container">
      <div class="center-container">
        <div class="registration_container">
          <h2 class="registration_sign_in">Variables MÃ©dicas</h2>
          <hr>
          <%= form_for(@patient_medical) do |f| %>
            <div class="form-row mb-4">
              <div class="form-group col-md-6">
                <h3>Variable</h3>
                <h4><%= @medical_variable.name.titleize %></h4>
              </div>
            </div>

            <div class="form-row mb-4">
              <div class="form-group col-md-6">
                <h4>Frecuencia</h4>
                <%= f.text_field :freq, class: 'registration_input pl-2 h-5' %>
              </div>
            </div>

            <%= f.hidden_field :patient_id, value: @patient.id %>

            <%= f.hidden_field :medical_variable_id, value: @medical_variable.id %>

            <div class="form-row">
              <div class="form-group col-md-6">
                <%= f.submit "Actualizar", class: 'btn btn-primary' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>